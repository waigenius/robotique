    </link> 

    <joint name="base_palm_finger1_1_joint" type="revolute">
        <origin xyz="0.15141 -0.034337 0.105315" rpy="-4.22 1.68 5.35" />
        <parent link="palm_link" />
        <child link="finger1_1_link" />
        <limit effort="10" velocity="10" lower="0.0"  upper="1.57" />
    </joint>

    <link name="finger1_2_link">
