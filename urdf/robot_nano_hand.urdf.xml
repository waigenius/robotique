<?xml version="1.0"?>
<robot name="robot_nano_hand_teleop">


    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 1.57"/>
            <geometry>
                <mesh filename="file:///$(find robot_nano_hand_teleop)/models/robot_nano_hand_base.stl" scale="1 1 1"/>
            <geometry>
            <material name="green"/>
        </visual>

    </link>


    <!-- Palm link -->
    <link name="palm_link">
        <visual>
            <origin xyz="0 0 0.132" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file:///$(find robot_nano_hand_teleop)/models/robot_nano_hand_palm.stl" scale="1 1 1"/>
            <geometry>
           
        </visual>

    </link> 


    <!-- Palm joint -->
    <joint name="base_palm_joint" type="revolute">
        <origin xyz="0 0 0.132" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="palm_link" />
        <limit effort="10" velocity="10" lower="0.0"  upper="1.57" />
    </joint>



